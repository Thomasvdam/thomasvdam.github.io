{
  "extends": "tslint-config-airbnb",
  "linterOptions": {},
  "rules": {
    "indent": [true, "spaces", 4],
    "ter-indent": [true, 4],
    "import-name": false,
    "variable-name": false,
    "function-name": false,
    "max-line-length": false,
    "align": [true, "parameters", "statements"],
    "object-shorthand-properties-first": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}
